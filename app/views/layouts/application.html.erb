<!DOCTYPE html>
<html>
<style>
body {
    font-family: "Lato", sans-serif;
    background-image: url("/assets/libraryBg.jpg");
    background-color: #404040;
}

.sidenav {
    height: 100%;
    width: 0;
    position: fixed;
    z-index: 1;
    top: 0;
    left: 0;
    background-color: #111;
    overflow-x: hidden;
    transition: 0.5s;
    padding-top: 60px;
}

.sidenav a {
    padding: 8px 8px 8px 32px;
    text-decoration: none;
    
    color: #ffffff;
    display: block;
    transition: 0.3s
}

.sidenav a:hover, .offcanvas a:focus{
    color: #ffff00;
}

.closebtn {
    position: absolute;
    top: 0;
    right: 25px;
    font-size: 20px !important;
    margin-left: 50px;
}

#main {
    transition: margin-left .5s;
    padding: 16px;
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}

</style>
<head>
  <title>Library</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="main">
<!-- Header -->
	 <nav class="navbar navbar-inverse">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="#">Library</a>
	    </div>
	    <ul class="nav navbar-nav">
	      <%unless session[:user_id]%>
	      	
	      		<li><%= link_to :Profile , :profile, class: "nav_links" %> </li>
	      		<li><%= link_to :Setting , :setting, class: "nav_links" %> </li>
	      	
	      <%else%>
	      	
	      		<li><%= link_to :Home , :home, class: "nav_links" %> </li>
	      		<li><%= link_to :Profile , :profile, class: "nav_links" %> </li>
	      		<li><%= link_to :Setting , :setting, class: "nav_links" %> </li>	
	      	
	      <%end%>
	    </ul>
	    <ul class="nav navbar-nav navbar-right">
	    	<%unless session[:user_id]%>
	    		<li><%= link_to " SignUp" , :signup, class: "glyphicon glyphicon-user"%></li>
	    		<li><%= link_to " LogIn" , :login, class: "glyphicon glyphicon-log-in"%></li>
	    	<%else%>
	    		<li><a href="#"><span class="glyphicon glyphicon-user"></span>Welcome <%=@current_user.user_name%></a></li>
	    		<li><%= link_to " LogOut" , :logout, class: "glyphicon glyphicon-log-out" %></li>
	    	<%end%>
	    </ul>
	  </div>
	</nav>

	
	<div id="mySidenav" class="sidenav" style="background: rgba(122, 130, 136, 0.5)!important;">
		<a href="javascript:void(0)" class="closebtn" onclick="closeNav()">Close <span class="glyphicon glyphicon-remove-circle"></span></a>

		<h2><span class="label label-default">Librarian</span></h2>
		<table class="table">
		<tr><td>
			<%= link_to 'Library Management' , librarians_index_path, class: "btn btn-info btn-block" %>
			<%unless session[:user_id]%>
			<%else%>
			<% if "#{@current_user.user_level}".eql?"staff librarian"%>
			<%= link_to 'User Management' , users_path, class: "btn btn-info btn-block" %>
			<%end%>
			<%end%>
			 <button type="button" class="btn btn-default btn-block">Default</button>
			<button type="button" class="btn btn-primary btn-block">Primary</button>
			<button type="button" class="btn btn-success btn-block">Success</button>
			<button type="button" class="btn btn-info btn-block">Info</button>
			<button type="button" class="btn btn-warning btn-block">Warning</button>
			<button type="button" class="btn btn-danger btn-block">Danger</button>
			<button type="button" class="btn btn-link btn-block">Link</button>
		</td></tr>	
		</table>
		 

	  
	  <a href="#">About</a>
	  <a href="#">Services</a>

	</div>
	<%unless session[:user_id]%>
	<%else%>
		<% if "#{@current_user.user_level}".eql?"student librarian" or "#{@current_user.user_level}".eql?"staff librarian"%>
		<button type="button" class="btn btn-info">
			<span style="cursor:pointer" onclick="openNav()">â˜° Librarian Navigation</span>	
		</button>
		<%end%>
	
	<%end%>

	<div class="panel panel-default" style="background: rgba(122, 130, 136, 0.5)!important;">

		<% if flash[:color]== "valid" %>
			<div class="alert alert-success">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<p align="center"> <strong><%= flash[:notice]%> </strong></p>
				
			</div>
		<% elsif flash[:color]== "invalid"%>
			<div class="alert alert-danger">
				<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
				<p align="center"> <strong><%=flash[:notice]%> </strong></p>
				
			</div>
		<%else%>
			<div class="notice">
				<p><%=flash[:notice]%></p>
			</div>
		<%end%>	  	

	  	<div class="container">
	  		<%= yield %>
	  		<br>  			
		</div>
	  </div>
	</div>
	  
	</div>
	<script>
	function openNav() {
	    document.getElementById("mySidenav").style.width = "250px";
	    document.getElementById("main").style.marginLeft = "250px";
	}

	function closeNav() {
	    document.getElementById("mySidenav").style.width = "0";
	    document.getElementById("main").style.marginLeft= "0";
	}
	</script>
</body>
</html>
